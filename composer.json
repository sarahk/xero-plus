{
  "name": "sarahk/xero-plus",
  "description": "Xero Plus App for Cabin King",
  "type": "project",
  "require": {
    "xeroapi/xero-php-oauth2": "^9.1",
    "monolog/monolog": "^3.9",
    "guzzlehttp/guzzle": "^7.9.3",
    "tinymce/tinymce": "^7.9.0",
    "ext-pdo": "*",
    "twilio/sdk": "^8.6.1"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Sarah King",
      "email": "rainchx@gmail.com"
    }
  ],
  "require-dev": {
    "pestphp/pest": "^3.8.2",
    "phpstan/phpstan": "^1.12.27",
    "psalm/phar": "^5.26.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/guzzle/guzzle.git"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/constants.php",
      "app/ExtraFunctions.php",
      "app/StorageClass.php",
      "app/Utilities.php"
    ]
  },
  "scripts": {
    "test": "pestphp",
    "analyse": "phpstan analyse",
    "phpstan": "\"vendor/bin/phpstan -c phpstan.neon\""
  }
}
